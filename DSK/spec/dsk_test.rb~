require "rspec"

#require "deep_symbolize_keys"
#require "hash"

describe Hash do

  it 'should' do
    hash = Hash.new({
                        'fred' => {
                            'name' => 'Fred Elliott',
                            'age' => 63,
                            'gender' => 'male',
                            'favorite painters' => ['Monet', 'Constable', 'Da Vinci']
                        },
                        'janet' => {
                            'name' => 'Janet S Porter',
                            'age' => 55,
                            'gender' => 'female'
                        }
                    })
    hash.deep_symbolize_keys.each {|k,v|
      k.class.should == Symbol
    }
  end
end
