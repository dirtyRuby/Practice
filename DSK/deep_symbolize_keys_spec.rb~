require "rspec"
require "spec_helper"
require "deep_symbolize_keys"

describe Hash do
  before :all do
  	hash = {
                        'fred' => {
                            'name' => 'Fred Elliott',
                            'age' => 63,
                            'gender' => 'male',
                            'favorite painters' => ['Monet', 'Constable', 'Da Vinci']
                        },
                        'janet' => {
                            'name' => 'Janet S Porter',
                            'age' => 55,
                            'gender' => 'female'
                        }
                    }
  end
  it 'should' do
    
    hash.deep_symbolize_keys.each {|k,v|
      k.class.should == Symbol
    }
  end
end
